@(records : List[models.<%= options[:package] + "." if options[:package]%><%=name.capitalize%>ViewModel])
@layouts.main("Index"){
<div><a class="btn btn-success active" href="@controllers.<%= options[:package] + "." if options[:package]%>routes.<%=name.capitalize%>Controller.create()">Create</a></div>
<% field_names_array = [] -%>
<table class="table table-striped table-hover">
	<thead>
	<tr>
	<% fields.each do |field| -%>
	<% ps = field.split(":") -%><th><%=ps[0]%><% field_names_array.push(ps[0])%></th>
	<%end-%><th>操作</th></tr>
	</thead>
	<tbody>
	@if(records != null && records.length != 0) {
		@for(model <- records){
		<tr><% field_names_array.each do |field| -%><td>@model.get<%=field.capitalize%>()</td><% end -%><td>
		    <a href="@controllers.<%= options[:package] + "." if options[:package]%>routes.<%=name.capitalize%>Controller.show(model.getId())" class="btn btn-info"><span class="glyphicon glyphicon-list-alt"></span></a>
		    <a href="@controllers.<%= options[:package] + "." if options[:package]%>routes.<%=name.capitalize%>Controller.update(model.getId())" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></a>
		    <a href="@controllers.<%= options[:package] + "." if options[:package]%>routes.<%=name.capitalize%>Controller.delete(model.getId())" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a></td></tr>
		}
	} else {
		<tr><td colspan="<%= field_names_array.length + 1 %>">There's no record exist!! ^_^'</td></tr>
	}
	</tbody>
</table>
}


