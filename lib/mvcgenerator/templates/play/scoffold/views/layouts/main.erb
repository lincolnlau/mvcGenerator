@(title: String, scripts: Html = Html(""), styles: Html = Html(""))(content: Html)

<!DOCTYPE html>

<html>
    <head>
        <title>@title</title>
        <link rel="stylesheet" type="screen" href="@routes.Assets.at("bootstrap/css/bootstrap.min.css")">

        <link rel="stylesheet" media="screen" href="@routes.Assets.at("stylesheets/main.css")">
        <link rel="shortcut icon" type="image/png" href="@routes.Assets.at("images/favicon.png")">

        @styles
    </head>
    <body>
        @layouts.header()
        <div class="container" id="main">
        @content
        </div>
        @layouts.footer()
        <script src="@routes.Assets.at("javascripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
        <!-- Latest compiled and minified JavaScript -->
        <script src="@routes.Assets.at("bootstrap/js/bootstrap.min.js")"></script>
        @scripts
    </body>

</html>